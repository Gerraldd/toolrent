# Environment Variables Template
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE
# ===========================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/peminjaman_alat?schema=public"

# ===========================================
# NEXTAUTH
# ===========================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# ===========================================
# DATABASE BACKUP/RESTORE
# ===========================================
# Master password for database restore (required for security)
DB_MASTER_PASSWORD="your-super-secret-master-password"

# Path to PostgreSQL tools (optional, defaults to PATH)
# PG_DUMP_PATH="C:/Program Files/PostgreSQL/16/bin/pg_dump.exe"
# PSQL_PATH="C:/Program Files/PostgreSQL/16/bin/psql.exe"

# ===========================================
# DATABASE MANAGER (Odoo-style)
# ===========================================
# PostgreSQL server connection for managing multiple databases
POSTGRES_HOST="localhost"
POSTGRES_PORT="5432"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="your_postgres_password"

# Database List Feature (true = show database selector on login page)
DB_LIST="false"
